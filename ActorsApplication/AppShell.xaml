<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ActorsApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ActorsApplication.Pages"
    Title="ActorsApplication">

    <ShellContent
        Title="ViewToView"
        ContentTemplate="{DataTemplate pages:ViewToViewBinding}"
        Route="ViewToView" />

    <ShellContent
        Title="ActorDetails"
        ContentTemplate="{DataTemplate pages:ActorDetailPage}"
        Route="ActorDetails" />

    <ShellContent
        Title="Actors"
        ContentTemplate="{DataTemplate pages:ActorsPage}"
        Route="Actors" />

</Shell>
