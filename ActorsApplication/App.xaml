<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ActorsApplication"
             xmlns:converter="clr-namespace:ActorsApplication.Converters"
             x:Class="ActorsApplication.App">
    <Application.Resources>
        <ResourceDictionary>
            <converter:AgeConverter x:Key="AgeConverter"/>
            <converter:AgeToColorConverter x:Key="AgeToColorConverter"/>
            <converter:FirstNameToBackgroundConverter x:Key="FirstNameToBackgroundConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
